<h1>Listing thoughts</h1>

<%= link_to 'New thought', new_thought_path %>

<%= render 'form' %>

<table>
  <tr>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @thoughts.each do |thought| %>
    <tr>
      <td><%= thought.text %></td>
      <td><%= link_to 'Show', thought_path(thought) %></td>
      <td><%= link_to 'Edit', edit_thought_path(thought) %></td>
      <td><%= link_to 'Destroy', thought_path(thought), method: :delete, data: {
      confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
</table>
