<%= form_with model: @thought, local: true do |form| %>

  <% if @thought.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@thought.errors.count, "error")%> prohibited this thought from being saved: </h2>
      <ul>
        <% @thought.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

